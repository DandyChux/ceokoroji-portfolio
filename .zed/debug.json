// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
	{
		"adapter": "CodeLLDB",
		"label": "Debug Rust API",
		"request": "launch",
		"build": {
			"command": "cargo",
			"args": [
				"build"
			],
			"cwd": "${ZED_WORKTREE_ROOT}/api"
		},
		"program": "${ZED_WORKTREE_ROOT}/api/target/debug/ceokoroji-api",
		"cwd": "${ZED_WORKTREE_ROOT}/api",
		"stopOnEntry": false,
		"env": {
			"RUST_BACKTRACE": "1"
		}
	},
	{
		"adapter": "CodeLLDB",
		"label": "Debug Rust API (with auto-reload)",
		"request": "attach",
		"pid": "$ZED_PICK_PID"
	}
]
